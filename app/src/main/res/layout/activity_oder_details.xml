<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:tools="http://schemas.android.com/tools"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:orientation="vertical"
			  style="@style/MainContainer"
			  android:background="@color/colorPrimaryDark"
			  tools:context="com.example.android.karaokebar.OderDetailsActivity">

<ImageView
	android:src="@drawable/background_2"
	android:layout_height="40dp"
	android:layout_width="match_parent"
	android:layout_gravity="center"
	android:padding="16dp"
	android:layout_weight="3"/>

<LinearLayout
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:paddingBottom="32dp"
	android:orientation="vertical"
	android:layout_weight="2">

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="Your order:"
		android:textColor="@color/colorPrimaryLightText"
		android:gravity="center"
		android:textSize="36dp"/>

	<TextView
		android:id="@+id/ordered_song_name"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textColor="@color/colorPrimaryLight"
		android:paddingBottom="36dp"
		android:gravity="center"
		android:textSize="24dp"/>

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="Your name:"
		android:textColor="@color/colorPrimaryLightText"
		android:gravity="center"
		android:textSize="36dp"/>

	<TextView
		android:id="@+id/singer_name"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textColor="@color/colorPrimaryLight"
		android:gravity="center"
		android:textSize="16dp"/>


</LinearLayout>

<Button
	android:id="@+id/back_to_scene_btn"
	android:text="Back to Scene"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_alignParentBottom="true"/>

</LinearLayout>

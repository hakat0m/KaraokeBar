<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:tools="http://schemas.android.com/tools"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:orientation="vertical"
			  style="@style/MainContainer"
			  android:background="@color/colorPrimaryDark"
			  tools:context="com.example.android.karaokebar.TrackOrderFormActivity">

	<ImageView
		android:src="@drawable/background_2"
		android:layout_height="40dp"
		android:layout_width="match_parent"
		android:layout_gravity="center"
		android:padding="16dp"
		android:layout_weight="2"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="90dp"
		android:paddingBottom="32dp"
		android:orientation="vertical"
		android:gravity="center"
		android:layout_weight="2">

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Your order:"
			android:textColor="@color/colorPrimaryLightText"
			android:gravity="center"
			android:textSize="36dp"/>

		<TextView
			android:id="@+id/song_name"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textColor="@color/colorPrimaryLight"
			android:gravity="center"
			android:textSize="16dp"/>

	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingBottom="32dp"
		android:orientation="vertical"
		android:layout_weight="2">

		<EditText
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:inputType="textPersonName"
			android:hint="Name"
			android:textColorHint="@color/background"
			android:ems="10"
			android:textColor="@color/background"
			android:backgroundTint="@color/background"/>

		<Space
			android:layout_width="match_parent"
			android:layout_height="wrap_content" android:layout_weight="1"/>
		<EditText
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:inputType="textEmailAddress"
			android:ems="10"
			android:hint="E-mail"
			android:textColorHint="@color/background"
			android:textColor="@color/background"
			android:backgroundTint="@color/background"/>

		<Space
			android:layout_width="match_parent"
			android:layout_height="wrap_content" android:layout_weight="1"/>

		<CheckBox
			android:text="I'm an adult"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textColor="@color/background"
			android:buttonTint="@color/background"/>

	</LinearLayout>


	<Button
		android:id="@+id/send_order_btn"
		android:text="Send Order"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"/>

</LinearLayout>